<h1>Welcome to Galisoft ChatApp</h1>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(url: login_path, html: {class: 'ui form'}, method: :post) do |form| %>
        <div class="field">
          <%= form.label :username %>
          <div class="ui left icon input">
            <%= form.text_field :username, placeholder: 'Enter username' %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= form.label :password %>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: 'Password' %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div><%= form.submit('Sign in', class: 'ui submit button orange') %></div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>